      <TextOption Key="Verbal" Value="%{He/She} #{Eyes}, and #{Verbal}.">
        <TextOption Key="Motor" Value="%{He/She} #{Eyes}, #{Verbal}, and #{Motor}."/>
      </TextOption>
      <TextOption Key="Motor" Value="%{He/She} #{Eyes}, and #{Motor}."/>
